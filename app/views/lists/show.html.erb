<h2><%= @list.name %></h2>
<p><strong>Movies</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
    <%= bookmark.movie.title %>
    <%= bookmark.comment %>
    <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<div><%= link_to "Add a move to list", new_list_bookmark_path(@list), class: "btn btn-primary"%></div>
<div><%= link_to "Back", lists_path, class: "btn btn-primary" %></div>
